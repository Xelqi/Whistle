<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editUserActivity">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"/>

    <TextView
        android:id="@+id/txt_editusertitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Edit User Profile"
        android:textAlignment="center"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/editUserName"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_UserName"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_UserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_editusertitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="193dp"
        android:text="User Name"
        android:textAlignment="center"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editUserGender"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_UserGender"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_UserAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editUserGender"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:text="Age"
        android:textAlignment="center"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/editUserAge"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_UserAge"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="16dp"

        android:layout_marginTop="7dp"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/txt_UserGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/editUserName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:text="Gender"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Button
        android:id="@+id/editUserButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editUserAge"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="228dp"
        android:text="Confirm" />

</RelativeLayout>
